@model LibraryManagementSystem.Models.BorrowRecord

<h2>Create Borrow Record</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Book</label>
        <select asp-for="BookId" class="form-control" asp-items="@(new SelectList(ViewBag.Books, "Id", "Title"))"></select>
    </div>
    <div class="form-group">
        <label>User</label>
        <select asp-for="UserId" class="form-control" asp-items="@(new SelectList(ViewBag.Users, "Id", "Name"))"></select>
    </div>
    <div class="form-group">
        <label>Borrow Date</label>
        <input asp-for="BorrowDate" class="form-control" />
    </div>
    <div class="form-group">
        <label>Return Date</label>
        <input asp-for="ReturnDate" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
